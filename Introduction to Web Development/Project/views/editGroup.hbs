<h1>Edit a Group</h1>
<div>
    <form class="form-control">

        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="groupName" name="groupName" placeholder="Name" value="{{groupName}}" required>
            <br>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea type="text" class="form-control" id="groupDesc" name="groupDesc" placeholder="Description">{{groupDesc}}</textarea>
            <br>
        </div>

        <button type="button" id="groupEdit-{{groupID}}" class="btn btn-lg btn-dark align-content-center">Submit</button><br>
        <button type="button" class="btn btn-secondary btn-lg float-start" onclick="history.back()">Back</button>
    </form>
    <br>
</div>
<script src="/static-files/updateGroup.js"></script>
<script>
    updateGroup();
</script>

{{#if error}}
	<p><strong>ERROR:</strong> {{error}}</p>
    <br>
{{/if}}